<section class="groups">
  <div class="header-sign-out">
    <%= link_to " < ", "/groups" %>
   <h1>Category</h1>
   <p>
    <%= link_to "sing out",  destroy_user_session_path, method: :delete %>
   </p> 
  </div>
  <div class="group-list"> 
    <div class="group">
     <div class="name-icon">
      <span>
        <%= @group.icon %>
      </span> 
      <h4>
        <%= @group.name %>
      <h4>
    </div>  
      <p>
        $ <%= @group.total_amount %>
      </p>
    </div>
  </div>
  <button class="remove-category">
    <%= link_to 'Remove', {:controller => :groups, :action => 'destroy', :id => @group.id}, :method => :delete, data: { confirm: 'Are you sure?' } %>
  </button>
  <h2>Expenses</h2> 
      <% @group.expenses.order(created_at: :desc).each do |expense| %>
   <div class="expense">
      <span>
        <%= expense.name %>
      </span> 
      <span>
        $ <%= expense.amount %>
      </span>
    </div>     
    <% end %>
    
</section>
<button class="btn">
    <%= link_to "add a new transaction", "/expenses/new" %>
</button>