<section class="groups">
  <div class="header-sign-out">
   <h1>Categories</h1>
   <p>
    <%= link_to "sing out",  destroy_user_session_path, method: :delete %>
   </p> 
  </div>
  <div class="group-list">
   <% @groups.each do |group| %>
   <%= link_to group, class:"group_link" do %>
   <div class="group">
    <div class="name-icon">
      <span>
        <%= group.icon %>
      </span> 
      <h4>
        <%= group.name %>
      <h4>
    </div>  
      <p>
        $ <%= group.total_amount %>
      </p>
    </div>
    <br>  
    <% end %>
  <%end%>
  </div>
  <button class="btn">
    <%= link_to "New Category", "/groups/new" %>
  </button>
</section>